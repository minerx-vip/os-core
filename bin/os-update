#!/bin/bash


curl https://minerx-download.oss-cn-shanghai.aliyuncs.com/install.sh/install.sh | bash
if [ $? -eq 0 ]; then
    echo "First installation successful"
    exit 0
fi

echo "First installation failed, retrying..."
source /os/config/rig.conf
curl ${server_url}/install.sh | bash
if [ $? -eq 0 ]; then
    echo "Second installation successful"
    exit 0
fi

echo "Both installation attempts failed, please check network connection or installation script" >&2
exit 1

